<Window x:Class="SchoolOfExcellence.SelectStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolOfExcellence"
      mc:Ignorable="d" 
      MinHeight="450" MinWidth="800"
      Title="Выбор ученика">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Выберите студента" Margin="20"></TextBlock>
            <ComboBox Name="comboStudent" TextBoxBase.TextChanged="OnComboboxTextChanged" IsEditable="True" DisplayMemberPath="FullName"></ComboBox>
            <TextBlock Text="Группа" Margin="20"></TextBlock>
            <ComboBox Name="comboGrade" IsEditable="True" DisplayMemberPath="Name"></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSelect" Content="Добавить" Click="btnSelect_Click"></Button>
        </StackPanel>
    </Grid>
</Window>

<Page x:Class="SchoolOfExcellence.AttendancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolOfExcellence"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AttendancePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата" Margin="20 0"></TextBlock>
                <DatePicker Name="dpDate" FontSize="20" SelectedDateChanged="dpDate_SelectedDateChanged"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дисциплина" Margin="20 0"></TextBlock>
                <ComboBox Name="comboActivity" Width="250" SelectionChanged="comboActivity_SelectionChanged" DisplayMemberPath="Name"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Преподаватель" Margin="20 0"></TextBlock>
                <ComboBox Name="comboTeacher" Width="250" SelectionChanged="comboTeacher_SelectionChanged" DisplayMemberPath="FullName"></ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Расписание" Margin="20" FontSize="25"></TextBlock>
            <DataGrid Height="400" ScrollViewer.VerticalScrollBarVisibility="Visible" x:Name="dgShedules" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgShedules_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дисциплина" Binding="{Binding TeacherActivity.Activity.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Преподаватель" x:Name="columnTeacher" Binding="{Binding TeacherActivity.Teacher.FullName}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Группа" Binding="{Binding Grade.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата" Width="130" Binding="{Binding Date, StringFormat='dd.MM.yyyy'}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Время" Binding="{Binding LessonStartTime,  StringFormat=hh\\:mm}"></DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Кабинет" Binding="{Binding Cabinet}"></DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="Проведен" Binding="{Binding IsConducted}"></DataGridCheckBoxColumn>
                    <DataGridTextColumn Header="Причина" Binding="{Binding Reason}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button x:Name="btnBack" Content="Назад" Grid.Row="2" Click="btnBack_Click"></Button>
    </Grid>
</Page>
